@page
@model Maze.Pages.CreateModel
@{
	ViewData["Title"] = "Create";
}

<h2>Generate new maze</h2>

<form method="post">
	<div class="form-group">
		<label for="name">Maze Name</label>
		<input type="text" class="form-control" id="name" pattern=".{5,25}" title="Name must be between 5 and 25 characters" required asp-for="MazeConfiguration.Name" placeholder="Maze name">
		<small class="form-text text-muted">Mazes need names too!</small>
	</div>
	<div class="form-group">
		<label for="width">Width</label>
		<input type="number" class="form-control" id="width" min="10" max="25" required asp-for="MazeConfiguration.Width" placeholder="Enter maze width">
	</div>
	<div class="form-group">
		<label for="height">Height</label>
		<input type="number" class="form-control" id="height" min="10" max="25" required asp-for="MazeConfiguration.Height" placeholder="Enter maze height">
	</div>
	<button type="submit" class="btn btn-primary">Generate</button>
</form>